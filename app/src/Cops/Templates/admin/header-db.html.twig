{% extends "admin/header.html.twig" %}

{% block selectdb %}

    {% set databases = app.config.getValue('db_name') %}

    {% if databases|length > 1 %}
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        {{ "Switch database:"|trans }} {{ app.config.getValue('current_database_key') }} <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        {% for dbKey, path in databases %}
            {% if dbKey != app.config.getValue('current_database_key') %}
        <li><a href="{{ path(dbSelectRoute, {'database' : dbKey}) }}">{{ dbKey }}</a></li>
            {% endif %}
        {% endfor %}
    </ul>
</li>
    {% endif %}
{% endblock %}

{% block quicksearch %}{% endblock %}

