{% extends "ajax.html.twig" %}

{% block mainContent %}
    {% for author in authors %}
        <div class="col-xs-6 col-md-3">
            <a href="{{ path("author_detail", {"id": author.getId()}) }}" title="{{ author.getName() }}">{{ author.getSort() }} ({{ author.getBookCount() }})</a><br />
        </div>
    {% endfor %}
{% endblock %}
