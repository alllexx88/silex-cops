{% extends "layout.html.twig" %}

{% block head %}
    {% include "head.html.twig" with {'pageTitle': 'Login'|trans} %}
{% endblock %}

{% block header %}
<div id="header" class="navbar navbar-default navbar-fixed-top">
    <div class="container">

        <div class="navbar-header">
            <span class="navbar-brand">SilexCOPS</span>
        </div>
    </div>
</div>

<div class="page-header"></div>
{% endblock %}

{% block mainBody %}
<div class="container">

    <div class="row text-center">
        <h2>{{ "Please login to continue"|trans }}</h2>
    </div>

    <form id="login-form" action="{{ path('login_check') }}" method="post">
        <div class="row">
            {{ error }}
        </div>

        <div class="row form-group">
            <div class="col-md-4 col-md-offset-3">
                <label class="control-label" for="username">{{ "Username"|trans([], "admin") }}</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-4 col-md-offset-3">
                <label class="control-label" for="password">{{ "Password"|trans([], "admin") }}</label>
                <input type="password" id="password" name="_password" class="form-control" value="" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-7 text-right">
                <button type="submit" class="btn btn-primary">{{ "Submit"|trans }}</button>
            </div>
        </div>

        <div class="row">
        </div>

    </form>
</div>
{% endblock %}
